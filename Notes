30-07-2021

class Movie {
  constructor (title, studio, rating="PG") {
      this.title = title;
      this.studio = studio;
      this.rating = rating;
  }
get pop() {
  return this.getPG();
}

getPG (a) {
      var b = [];
      for (let i in a){
          if(this.rating == "PG") {
              b.push(a[i]);
          }
      }
      return (b);
  }
}

let arr = new Movie ("Casino Royale", "Eon Productions", "PG13");
let a = new Movie("a", "b", "PG");

console.log(Movie.getPG(a));

