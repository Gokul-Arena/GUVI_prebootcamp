<!DOCTYPE html>
<html lang="en-IN">
  <head>
    <title>Nature Sliding Banner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
            .container{
              text-align:center;
              margin-top:50px;
            }

            img{
              width:100%;
              height:100%
            }

            .inner{
      border:2px solid green;
      width:50%;
      height:500px;
      margin:auto;
      margin-top:100px;
    </style>
  </head>

  <body>
    <div class="container">
      <h1><b>Nature Sliding Banner</b></h1>
      <div class="inner">
        <img id="image" />
      </div>
      <script>
        var a = document.getElementById("image");
        var image = [
          "images/nature/1.jpeg",
          "images/nature/2.jpeg",
          "images/nature/3.jpeg",
          "images/nature/4.jpeg",
          "images/nature/5.jpeg",
        ];
        var index = 0;
        console.log(image[0]);

        function cycleImage() {
          a.setAttribute("src", "image[index]");
          index = (index + 1) % image.length;
          console.log(index);
        }
        setInterval(cycleImage, 2000);
      </script>
    </div>
  </body>
</html>


